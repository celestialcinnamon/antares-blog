<article class="post post--featured">
	<header class="post__header">
		<h2><a href="<%- config.root %><%- item.path %>"><%- item.title %></a></h2>
	</header>
	<figure class="post__cover">
		<img style="background-image: <%-item.cover_gradient %>" src="<%- config.root %><%- item.path %><%- item.cover_image %>" alt="">
	</figure>
	<section class="post__content">
        <div class="flex">
            <figure class="author">
                <%- image_tag(item.author.image, {alt: item.author.name, class: 'author__image'}) %>
                <figcaption class="author__meta">
                    <cite class="author__name"><%= item.author.name %></cite>
                    <time datetime="<%= new Date(item.date).toJSON() %>" class="article-date"><%= item.date.format(config.date_format) %></time>
                </figcaption>
            </figure>
        </div>
		<%- item.excerpt %>
	</section>
    <footer class="post__actions">
        <a href="<%- config.root %><%- item.path %>">Read more</a>
    </footer>
</article>


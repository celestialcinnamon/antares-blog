<% const item = post %>
<article class="post post--article">
  <header>
    <h1>
      <a class="post__title" href="<%- config.root + post.path %>"><%- item.title %></a>
    </h1>
  </header>
  <div class="post__content">
    <%- post.content %>
  </div>
  <footer class="article-footer">
      <%- partial('post/tag') %>
      <%- partial('post/category') %>
  </footer>
</article>